{
  "name": "plinth-ui",
  "author": "Trevor Rice <trevor.rice@hey.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.1.0",
  "workspaces": [
    "packages/*/*",
    "playground"
  ],
  "scripts": {
    "lint": "eslint packages --ext .js,.ts,.tsx --ignore-path .gitignore",
    "build": "parcel build 'packages/*/*'",
    "playground": "yarn workspace playground storybook"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.20.0",
    "parcel": "^2.0.1",
    "prettier": "2.4.1",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "prettier"
    ]
  }
}
